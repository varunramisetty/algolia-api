<?xml version="1.0"?>
<settings>
    <pluginGroups>
        <pluginGroup>org.mule.tools</pluginGroup>
    </pluginGroups>
    <servers>
        <!-- connected app's required scopes: https://help.salesforce.com/s/articleView?id=001119708&type=1 -->
        <server>
            <id>anypoint-exchange-v3</id>
            <!-- make sure this matches the serverId property in pom.xml -->
            <username>~~~Client~~~</username>
            <password>${client.id}~?~${client.secret}</password>
            <!-- these come from the build.yml and your github secrets -->
    
        </server>
        <server>
            <id>MuleRepository</id>
            <username>${nexus_username}</username>
            <password>${nexus_password}</password>
        </server>
    </servers>
    <profiles>
        <profile>
            <id>Mule</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <repositories>
                <repository>
                    <id>MuleRepository</id>
                    <name>MuleRepository</name>
                    <url>https://repository.mulesoft.org/nexus-ee/content/repositories/releases-ee/</url>
                    <layout>default</layout>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                    <snapshots>
                        <enabled>true</enabled>
                    </snapshots>
                </repository>
            </repositories>
        </profile>
    </profiles>
</settings>
